{
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "ES2021"
        ],
        "module": "CommonJS",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "build",
        "sourceMap": true,
        "target": "ES6",
        "esModuleInterop": true
    },
    "include": [
        "src/*.ts",
        "src/**.ts",
        "src/**/*.ts"
    ],
    "exclude": []
}
